<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"] - EPIM Formations</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>

        /* NAVBAR */
        .navbar-brand img {
            height: 40px;
        }

        .nav-link {
            font-weight: 500;
        }

        .nav-link:hover {
            color: #0d6efd !important;
        }

        /* FOOTER */
        footer {
            background: #f8f9fa;
            padding: 40px 0;
            margin-top: 60px;
            border-top: 1px solid #dee2e6;
        }

        footer a {
            text-decoration: none;
            color: #6c757d;
        }

        footer a:hover {
            color: #0d6efd;
        }

        /* Container fix */
        .content-container {
            min-height: 70vh;
        }

    </style>
</head>
<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <img src="/images/logo.jpg" alt="Logo" class="me-2">
                EPIM Formation
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENU -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : ""))"
                           href="/">
                            Accueil
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="/Formation">
                            Formations
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="/Contact">
                            Contact
                        </a>
                    </li>

                    <!-- LOGIN / REGISTER (SI IDENTITY) -->

                </ul>
                <partial name="_LoginPartial" />
            </div>

        </div>
    </nav>


    <!-- ================= CONTENT ================= -->
    <div class="container content-container mt-4">
        @RenderBody()
    </div>


    <!-- ================= FOOTER ================= -->
    <footer>
        <div class="container">

            <div class="row">

                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">EPIM Formation</h5>
                    <p class="text-muted small">
                        Plateforme de formation professionnelle offrant des cours adaptés aux étudiants et aux entreprises.
                    </p>
                </div>

                <div class="col-md-2 mb-3">
                    <h6 class="fw-bold">Navigation</h6>
                    <ul class="list-unstyled">
                        <li><a href="/">Accueil</a></li>
                        <li><a href="/Formation">Formations</a></li>
                        <li><a href="/Contact">Contact</a></li>
                    </ul>
                </div>

                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold">Contact</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt"></i> Meknès, Maroc</li>
                        <li><i class="bi bi-envelope"></i> contact@epim.ma</li>
                        <li><i class="bi bi-telephone"></i> +212 6 00 00 00 00</li>
                    </ul>
                </div>

                <div class="col-md-3 mb-3 text-center">
                    <h6 class="fw-bold">Suivez-nous</h6>
                    <a href="#" class="me-2"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="me-2"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#"><i class="bi bi-youtube fs-4"></i></a>
                </div>

            </div>

            <hr>
            <div class="text-center text-muted small">
                © @DateTime.Now.Year EPIM Formation — Tous droits réservés.
            </div>

        </div>
    </footer>


    <!-- ================= SCRIPTS ================= -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
