@using AvisFormation.Web.ViewModels
@model AccueilViewModel

@{
    ViewData["Title"] = "Accueil";
}

<!-- ===== HERO SECTION ===== -->
<div class="p-5 mb-5 bg-light rounded-4 shadow-sm hero-banner">
    <div class="container py-5">
        <h1 class="display-4 fw-bold text-primary">Bienvenue sur notre plateforme de formation</h1>
        <p class="fs-5 text-secondary mt-3">
            Découvrez nos meilleures formations recommandées par nos stagiaires.
        </p>

        <a href="/Formation" class="btn btn-primary btn-lg mt-3 px-4">
            Voir toutes les formations
        </a>
    </div>
</div>



<!-- ===== FORMATIONS ===== -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4 text-center">Formations à la une</h2>

    <div class="row g-4">
        @foreach (var f in Model.Formations)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-0 formation-card">

                    <!-- Image -->
                    <img src="/images/@f.ImageURL"
                         class="card-img-top rounded-top"
                         style="height:220px; object-fit:cover;" />

                    <div class="card-body">

                        <!-- Badges -->
                        <div class="mb-2">
                            @if (f.EstPopulaire)
                            {
                                <span class="badge bg-warning text-dark">
                                    ⭐ Populaire
                                </span>
                            }
                        </div>

                        <!-- Title -->
                        <h5 class="fw-bold">@f.Titre</h5>

                        <!-- Avis -->
                        <div class="mt-2 mb-2">
                            @if (f.NombreAvis > 0)
                            {
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Round(f.MoyenneAvis))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </span>
                                <span class="text-muted">(@f.NombreAvis avis)</span>
                            }
                            else
                            {
                                <span class="text-muted">Aucun avis</span>
                            }
                        </div>

                        <!-- Price -->
                        <p class="fs-5 fw-bold text-primary">@f.Prix MAD</p>

                        <!-- Button -->
                        <a href="/Formation/DetailsFormation/@f.Id"
                           class="btn btn-outline-primary w-100">
                            Voir les détails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<div class="container my-5">
    <h2 class="fw-bold mb-4 text-center">Catégories</h2>

    <div class="row text-center g-4">

        <div class="col-md-3">
            <div class="category-card p-4 shadow-sm rounded-4">
                <i class="bi bi-laptop fs-1 text-primary"></i>
                <h5 class="mt-3">Informatique</h5>
                <p class="text-muted small">Développement, réseaux, bureautique…</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="category-card p-4 shadow-sm rounded-4">
                <i class="bi bi-brush fs-1 text-danger"></i>
                <h5 class="mt-3">Infographie</h5>
                <p class="text-muted small">Design, Adobe, création visuelle…</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="category-card p-4 shadow-sm rounded-4">
                <i class="bi bi-briefcase fs-1 text-warning"></i>
                <h5 class="mt-3">Gestion</h5>
                <p class="text-muted small">Management, comptabilité, RH…</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="category-card p-4 shadow-sm rounded-4">
                <i class="bi bi-camera-video fs-1 text-success"></i>
                <h5 class="mt-3">Audiovisuel</h5>
                <p class="text-muted small">Montage, production, tournage…</p>
            </div>
        </div>

    </div>
</div>
<div class="container my-5">
    <h2 class="fw-bold mb-4 text-center text-success">Meilleures notes ⭐⭐⭐⭐⭐</h2>

    <div class="row g-4">
        @foreach (var f in Model.Formations.Where(x => x.MoyenneAvis >= 4).Take(3))
        {
            <div class="col-md-4">
                <div class="card shadow-sm border-success h-100">
                    <img src="/images@f.ImageURL" class="card-img-top" style="height:200px; object-fit:cover;">
                    <div class="card-body">

                        <h5 class="fw-bold">@f.Titre</h5>

                        <div class="text-warning">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Round(f.MoyenneAvis))
                                {
                                    <i class="bi bi-star-fill"></i>
                                    ;
                                }
                                else
                                {

                                    <i class="bi bi-star"></i>
                                    ;
                                }
                            }
                        </div>

                        <p class="mt-2"><strong>@f.Prix MAD</strong></p>

                        <a href="/Formation/DetailsFormation/@f.Id" class="btn btn-success w-100">
                            Voir les détails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="container my-5">
    <h2 class="fw-bold mb-4 text-center text-warning">Formations populaires 🔥</h2>

    <div class="row g-4">
        @foreach (var f in Model.Formations.Where(x => x.EstPopulaire).Take(3))
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-warning">

                    <img src="/images@f.ImageURL" class="card-img-top" style="height:200px; object-fit:cover;">

                    <div class="card-body">
                        <h5 class="fw-bold">@f.Titre</h5>
                        <p class="text-muted small">@f.NombreAvis avis</p>

                        <a href="/Formation/DetailsFormation/@f.Id"
                           class="btn btn-outline-warning w-100">
                            Voir plus
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
<div class="container my-5">
    <h2 class="fw-bold mb-4 text-center">Témoignages</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="p-4 bg-light rounded shadow-sm">
                <p>"Une formation exceptionnelle avec un formateur compétent !"</p>
                <strong>- Ahmed</strong>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 bg-light rounded shadow-sm">
                <p>"J'ai appris énormément en un temps record. Merci EPIM !"</p>
                <strong>- Samira</strong>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 bg-light rounded shadow-sm">
                <p>"Des cours très bien structurés et des formateurs disponibles."</p>
                <strong>- Mohamed</strong>
            </div>
        </div>
    </div>
</div>
<div class="text-center my-5 py-5 bg-primary text-white rounded-4 shadow-sm">
    <h2 class="fw-bold mb-3">Commencez votre parcours de formation dès aujourd'hui !</h2>
    <p class="mb-4">Des programmes conçus pour développer vos compétences.</p>

    <a href="/Formation" class="btn btn-light btn-lg px-4">
        Explorer les formations
    </a>
</div>


<!-- ===== CUSTOM CSS ===== -->
<style>
    .hero-banner {
        background: linear-gradient(135deg, #e3f2fd, #ffffff);
        border-left: 6px solid #0d6efd;
    }

    .formation-card:hover {
        transform: translateY(-5px);
        transition: 0.2s ease-in-out;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }
</style>
